{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["./src/@types/*.d.ts", "./node_modules/@types"]
    },
    "ts-node": {
        "files": true
    },
    "exclude": ["./node_modules", "./src/**/*.test.ts", "./src/*.test.ts"]
}
